<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="RedSismica.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Red SÃ­smica - Panel de Control"
        WindowState="Maximized"
        Background="#F9FAFB">

    <Grid Name="MainPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Bar with modern design -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,0,1"
                Padding="20,0">
            <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center" Height="70">
                <!-- Title and branding -->
                <StackPanel Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Orientation="Horizontal" 
                           Spacing="12">
                    <TextBlock Text="ðŸŒ" FontSize="32"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Red SÃ­smica" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#1F2937"/>
                        <TextBlock Text="Sistema de Monitoreo" 
                                  FontSize="12" 
                                  Foreground="#6B7280"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="12"
                           VerticalAlignment="Center">
                    <Button Content="âž• Registrar Cierre" 
                           Click="SeleccionarOpcionRegistarCierre"
                           Classes="Primary"
                           Padding="14,8"
                           FontSize="13"/>
                    
                    <Button Content="ðŸ”„ Actualizar" 
                           Click="ActualizarDatos"
                           Classes="Secondary"
                           Padding="14,8"
                           FontSize="13"/>
                    
                    <Button Content="ðŸšª Cerrar SesiÃ³n"
                           Click="CerrarSesion"
                           Classes="Danger"
                           Padding="14,8"
                           FontSize="13"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area with DataGrids - Scrollable -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Sismografos Section -->
                <StackPanel Grid.Row="0" Spacing="12" Margin="0,0,0,16">
                    <TextBlock Text="ðŸ“Š SismÃ³grafos" 
                              Classes="SectionTitle"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#1F2937"/>
                    <DataGrid Name="SismografosDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              Height="200"
                              Background="White"
                              BorderBrush="#E5E7EB"
                              BorderThickness="1"
                              CornerRadius="6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{ReflectionBinding Identificador}" Width="80"/>
                            <DataGridTextColumn Header="Nombre" Binding="{ReflectionBinding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Estado" Binding="{ReflectionBinding Estado}" Width="130"/>
                            <DataGridTemplateColumn Header="Acciones" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Ver Historial"
                                                Click="VerHistorialSismografo"
                                                Tag="{ReflectionBinding}"
                                                Classes="Secondary"
                                                Padding="8,4"
                                                FontSize="12"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <!-- Estaciones Section -->
                <StackPanel Grid.Row="1" Spacing="12" Margin="0,0,0,16">
                    <TextBlock Text="ðŸ¢ Estaciones SismolÃ³gicas" 
                              Classes="SectionTitle"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#1F2937"/>
                    <DataGrid Name="EstacionesDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              Height="200"
                              Background="White"
                              BorderBrush="#E5E7EB"
                              BorderThickness="1"
                              CornerRadius="6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{ReflectionBinding Id}" Width="80"/>
                            <DataGridTextColumn Header="Nombre" Binding="{ReflectionBinding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="SismÃ³grafo" Binding="{ReflectionBinding NombreSismografo}" Width="150"/>
                            <DataGridTextColumn Header="Estado" Binding="{ReflectionBinding EstadoSismografo}" Width="130"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <!-- Ordenes Section -->
                <StackPanel Grid.Row="2" Spacing="12" Margin="0,0,0,16">
                    <TextBlock Text="ðŸ“‹ Ã“rdenes de InspecciÃ³n" 
                              Classes="SectionTitle"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#1F2937"/>
                    <DataGrid Name="OrdenesDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              Height="200"
                              Background="White"
                              BorderBrush="#E5E7EB"
                              BorderThickness="1"
                              CornerRadius="6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="NÂ° Orden" Binding="{ReflectionBinding NumeroOrden}" Width="80"/>
                            <DataGridTextColumn Header="Fecha" Binding="{ReflectionBinding FechaFinalizacion, StringFormat='{}{0:dd/MM/yyyy}'}" Width="100"/>
                            <DataGridTextColumn Header="EstaciÃ³n" Binding="{ReflectionBinding NombreEstacion}" Width="*"/>
                            <DataGridTextColumn Header="SismÃ³grafo" Binding="{ReflectionBinding NombreSismografo}" Width="150"/>
                            <DataGridTextColumn Header="Estado" Binding="{ReflectionBinding Estado}" Width="130"/>
                            <DataGridTextColumn Header="Responsable" Binding="{ReflectionBinding NombreResponsable}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <!-- Usuarios Section -->
                <StackPanel Grid.Row="3" Spacing="12">
                    <TextBlock Text="ðŸ‘¥ Usuarios del Sistema" 
                              Classes="SectionTitle"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#1F2937"/>
                    <DataGrid Name="UsuariosDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              Height="200"
                              Background="White"
                              BorderBrush="#E5E7EB"
                              BorderThickness="1"
                              CornerRadius="6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{ReflectionBinding Id}" Width="80"/>
                            <DataGridTextColumn Header="Nombre" Binding="{ReflectionBinding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Usuario" Binding="{ReflectionBinding NombreUsuario}" Width="120"/>
                            <DataGridTextColumn Header="Rol" Binding="{ReflectionBinding NombreRol}" Width="180"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
    
</Window>