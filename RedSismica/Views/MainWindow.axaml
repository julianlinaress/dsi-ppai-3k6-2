<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="RedSismica.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="RedSismica"
        WindowState="Maximized">

    <Grid Name="MainPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <StackPanel Grid.Row="0" 
                Orientation="Horizontal" 
                Spacing="10"
                Margin="10">
            <Button Content="Registrar Cierre de Orden" 
                    Click="SeleccionarOpcionRegistarCierre"
                    Padding="10,5"/>
            
            <Button Content="Actualizar Datos" 
                    Click="ActualizarDatos"
                    Padding="10,5"/>
            
            <Button Content="Cerrar Sesión"
                    Click="CerrarSesion"
                    Padding="10,5"
                    HorizontalAlignment="Right"/>

            <!-- Simple status indicator for background tasks (e.g., sending emails) -->
            <TextBlock Name="StatusText"
                   Margin="20,0,0,0"
                   VerticalAlignment="Center"
                   Foreground="Gray"
                   FontSize="12"
                   IsVisible="False"/>
        </StackPanel>

        <!-- Content Area with DataGrids -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Sismografos -->
            <TextBlock Grid.Row="0" Text="Sismógrafos" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
            <DataGrid Grid.Row="1" 
                      Name="SismografosDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{ReflectionBinding Identificador}" Width="80"/>
                    <DataGridTextColumn Header="Nombre" Binding="{ReflectionBinding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Estado" Binding="{ReflectionBinding Estado}" Width="120"/>
                    <DataGridTemplateColumn Header="Acciones" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Ver Historial"
                                        Click="VerHistorialSismografo"
                                        Tag="{ReflectionBinding}"
                                        Padding="5,2"
                                        FontSize="11"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Estaciones -->
            <TextBlock Grid.Row="2" Text="Estaciones Sismológicas" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
            <DataGrid Grid.Row="3"
                      Name="EstacionesDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{ReflectionBinding Id}" Width="60"/>
                    <DataGridTextColumn Header="Nombre" Binding="{ReflectionBinding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Sismógrafo" Binding="{ReflectionBinding NombreSismografo}" Width="150"/>
                    <DataGridTextColumn Header="Estado" Binding="{ReflectionBinding EstadoSismografo}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Ordenes -->
            <TextBlock Grid.Row="4" Text="Órdenes de Inspección" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
            <DataGrid Grid.Row="5"
                      Name="OrdenesDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="N° Orden" Binding="{ReflectionBinding NumeroOrden}" Width="80"/>
                    <DataGridTextColumn Header="Fecha Fin" Binding="{ReflectionBinding FechaFinalizacion, StringFormat='{}{0:dd/MM/yyyy}'}" Width="90"/>
                    <DataGridTextColumn Header="Estación" Binding="{ReflectionBinding NombreEstacion}" Width="*"/>
                    <DataGridTextColumn Header="Sismógrafo" Binding="{ReflectionBinding NombreSismografo}" Width="150"/>
                    <DataGridTextColumn Header="Estado" Binding="{ReflectionBinding Estado}" Width="150"/>
                    <DataGridTextColumn Header="Responsable" Binding="{ReflectionBinding NombreResponsable}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Usuarios -->
            <TextBlock Grid.Row="6" Text="Usuarios del Sistema" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
            <DataGrid Grid.Row="7"
                      Name="UsuariosDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{ReflectionBinding Id}" Width="60"/>
                    <DataGridTextColumn Header="Nombre" Binding="{ReflectionBinding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Usuario" Binding="{ReflectionBinding NombreUsuario}" Width="120"/>
                    <DataGridTextColumn Header="Rol" Binding="{ReflectionBinding NombreRol}" Width="180"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
    
</Window>